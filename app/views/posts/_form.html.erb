<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :message, label: "Spill the tea..", input_html: { class: "textarea" }, wrapper: false,
        label_html: { class: "label" }, placeholder: "pssssst..." %>
    </div>
    <br>
    <%= f.button :submit, 'Gossip!', class: "button is-primary" %>
  </div>

<% end %>
