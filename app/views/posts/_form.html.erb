<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Title", input_html: { class: "input" }, wrapper: false,
        label_html: { class: "label" }, placeholder: "Treat yo self." %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :message, label: "Spill the tea..", input_html: { class: "textarea" }, wrapper: false,
        label_html: { class: "label" }, placeholder: "pssssst..." %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :image, wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>

  <%= f.button :submit, 'Gossip!', class: "button is-primary" %>
<% end %>
