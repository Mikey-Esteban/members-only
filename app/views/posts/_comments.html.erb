<div class="section">
  <div class="columns is-centered">
    <div class="column is-8">
      <h3 class="title is-6"><%= pluralize(@post.comments.size, "comment") %></h3>
      <% @post.comments.each do |comment| %>
        <div class="notification is-primary">
          <h4 class="subtitle is-6">
            <%= member_signed_in? ? comment.member.name : 'Anon' %> said
            <em><%= comment.body %></em>
            <p><small><%= time_ago_in_words(Time.now, comment.created_at) %></small></p>
          </h4>
          <% if current_member == comment.member %>
            <%= link_to 'Delete', "/posts/#{comment.post_id}/comments/#{comment.id}", method: :delete, data: { confirm: 'Really delete comment?' } %>
          <% end %>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>
