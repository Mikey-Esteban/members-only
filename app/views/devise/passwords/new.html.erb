<div class="section">
<div class="container">
  <div class="columns is-centered">
  <div class="column is-4">
  <h4 class="title is-4">Forgot your password?</h4>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="field">
      <div class="control">
        <%= f.input :email, required: true, wrapper: false,
          input_html: { class: "input", autocomplete: "email" }, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.button :submit,  "Send me reset password instructions", class: "button is-primary is-light" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>
  </div>
</div>
</div>
