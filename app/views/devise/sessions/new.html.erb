<div class="section">
<div class="container">
    <div class="columns is-centered">
    <div class="column is-4">
    <h3 class="title is-3">Log in</h3>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="field">
          <div class="control">
            <%= f.input :email, required: false, input_html: { class: "input", autocomplete: "email" }, wrapper: false,
              label_html: { class: "label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :password, required: false, input_html: { class: "input", autocomplete: "current-password" }, wrapper: false,
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              label_html: { class: "label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.button :submit, 'Log in', class: "button is-primary is-light" %>
          </div>
        </div>

      <% end %>
    <%= render "devise/shared/links" %>
    </div>
    </div>
</div>
</div>
