<%= simple_form_for ([@post, @post.comments.build]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :body, label: "Grool. I meant to say great but then I started to say cool.", input_html: { class: "textarea" }, wrapper: false,
        label_html: { class: "label" }, placeholder: "That's so fetch..." %>
    </div>
    <br>
    <%= f.button :submit, 'Post!', class: "button is-primary" %>
  </div>

<% end %>
